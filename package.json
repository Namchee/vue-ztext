{
  "name": "@namchee/vue-ztext",
  "version": "1.0.0",
  "description": "ZText declarative component for Vue 3",
  "main": "dist/vue-ztext.cjs.js",
  "module": "dist/vue-ztext.es.js",
  "browser": "dist/vue-ztext.umd.js",
  "exports": {
    ".": {
      "import": "./dist/vue-ztext.es.js",
      "require": "./dist/vue-ztext.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --config vite.config.docs.ts",
    "build": "vite build --config vite.config.lib.ts",
    "docs:build": "vite build --config vite.config.docs.ts",
    "docs:preview": "vite preview --port 8080 --config vite.config.docs.ts",
    "lint": "eslint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Namchee/vue-ztext.git"
  },
  "keywords": [
    "vue"
  ],
  "author": "Cristopher Namchee <cristophernamchee12@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Namchee/vue-ztext/issues"
  },
  "homepage": "https://github.com/Namchee/vue-ztext#readme",
  "devDependencies": {
    "@jest/types": "^27.4.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.2.0",
    "@typescript-eslint/parser": "^4.2.0",
    "@vitejs/plugin-vue": "^2.0.1",
    "@vue/test-utils": "^2.0.0-rc.18",
    "@vue/vue3-jest": "^27.0.0-alpha.4",
    "auto": "^10.32.5",
    "eslint": "^7.10.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-vue": "^7.0.0-beta.4",
    "jest": "^27.4.7",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.4",
    "vite": "^2.7.12",
    "vue": "^3.2.26",
    "vue-eslint-parser": "^7.1.0"
  },
  "peerDependencies": {
    "vue": "^3"
  }
}
